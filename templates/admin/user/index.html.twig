{% extends 'admin/index_admin.html.twig' %}

{% block title %}{{ title }}{% endblock %}

{% block content %}
    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table mb-0">
                    <thead class="table-light">
                    <tr>
                        <th class="text-center">Id</th>
                        <th class="text-center">Аватар</th>
                        <th class="text-center">Имя Фамилия</th>
                        <th class="text-center">День рождения</th>
                        <th class="text-center">Роли</th>
                        <th class="text-center">email</th>
                        <th class="text-center">Адрес</th>
                        <th class="text-center">Регистрация</th>
                        <th class="text-center">Изменен</th>
                        <th class="text-center">Сделать админом</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for user in users %}
                        <tr>
                            <td>
                                <div class="d-flex align-items-center">
                                    <div>
                                        <input class="form-check-input me-3" type="checkbox"
                                               value=""
                                               aria-label="...">
                                    </div>
                                    <div class="ms-2">
                                        <h6 class="mb-0 font-14">{{ user.id }}</h6>
                                    </div>
                                </div>
                            </td>
                            <td class="text-center"><img src="{{ asset('uploads/avatar/') }}{{ user.avatarImg }}"
                                                         alt="avatar" style="width: 30px; height: 30px">
                            </td>
                            <td class="text-center">{{ user.firstName }} {{ user.secondName }}</td>
                            <td class="text-center">{{ user.birthdayAt | date }}</td>
                            <td class="text-center">{{ user.roles | json_encode }}</td>
                            <td class="text-center">{{ user.email }}</td>
                            <td class="text-center">address</td>
                            <td class="text-center">{{ user.registeredAt | date }}</td>
                            <td class="text-center">{{ user.updatedAt | date }}</td>

                            <td class="text-center">
                                <div class="d-flex order-actions">
                                    <a href="#" class=""><i class='bx bxs-edit'></i></a>
                                </div>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}
