{% extends 'admin/index_admin.html.twig' %}

{% block title %}{{ title }}{% endblock %}

    {% block content %}
        <div class="page-wrapper">
            <div class="page-content">
                <!--breadcrumb-->
                <div class="page-breadcrumb d-none d-sm-flex align-items-center mb-3">
                    <div class="breadcrumb-title pe-3">Applications</div>
                    <div class="ps-3">
                        <nav aria-label="breadcrumb">
                            <ol class="breadcrumb mb-0 p-0">
                                <li class="breadcrumb-item"><a href="{{ path('admin') }}"><i class="bx bx-home-alt"></i></a>
                                </li>
                                <li class="breadcrumb-item active" aria-current="page">Список дел</li>
                            </ol>
                        </nav>
                    </div>
                    <div class="ms-auto">
                        <div class="btn-group">
                            <button type="button" class="btn btn-light">Settings</button>
                            <button type="button" class="btn btn-light dropdown-toggle dropdown-toggle-split" data-bs-toggle="dropdown">	<span class="visually-hidden">Toggle Dropdown</span>
                            </button>
                            <div class="dropdown-menu dropdown-menu-right dropdown-menu-lg-end">	<a class="dropdown-item" href="javascript:;">Action</a>
                                <a class="dropdown-item" href="javascript:;">Another action</a>
                                <a class="dropdown-item" href="javascript:;">Something else here</a>
                                <div class="dropdown-divider"></div>	<a class="dropdown-item" href="javascript:;">Separated link</a>
                            </div>
                        </div>
                    </div>
                </div>
                <!--end breadcrumb-->
                <div class="card">
                    <div class="card-body">
                        <h4 class="mb-0">Список дел</h4>
                        <hr/>
                        <div class="row gy-3">
                            <div class="col-md-2 text-end d-grid">
                                <a type="button" href="{{ path('admin_todo_create') }}" class="btn btn-light w-100 mb-5">Добавить</a>
                            </div>
                        </div>
                        {% for task in tasks %}
                        <div class="card">
                            <div class="card-body">
                                <div class="accordion" id="accordionExample">
                                    <div class="accordion-item">
                                        <h2 class="accordion-header" id="heading{{ task.id }}">
                                            <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#collapse{{ task.id }}" aria-expanded="true" aria-controls="collapse{{ task.id }}">
                                               <span>{{ task.title }} | &nbsp;</span><span>  &nbsp; Дата выполнения: {{ task.dueDate | date }}</span>
                                            </button>
                                        </h2>
                                        <div id="collapse{{ task.id }}" class="accordion-collapse collapse show" aria-labelledby="heading{{ task.id }}" data-bs-parent="#accordionExample">
                                            <div class="accordion-body">	<strong>Создано: {{ task.createdAt | date }}</strong>
                                            <p>{{ task.description }}</p>
                                                <div class="flex-nowrap">
                                                    <a href="{{ path('admin_todo_update', {'id': task.id}) }}" type="button" class="btn btn-light w-25 mb-5">изменить</a>
                                                    <a href="{{ path('admin_todo_delete', {'id': task.id}) }}" type="button" class="btn btn-light w-25 mb-5">удалить</a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        {% endfor %}
                    </div>
                </div>
            </div>
        </div>
    {% endblock %}


